<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Texto Pasar"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/txtpasarnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@android:drawable/btn_star"
        android:layout_margin="1dp"
        android:hint="Introduce tu nombre"
        android:inputType="text"/>

    <EditText
        android:id="@+id/txtpasarapellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@android:drawable/btn_star"
        android:layout_margin="1dp"
        android:hint="Introduce tu apellido"
        android:inputType="text"
        android:maxLength="9"/>

    <EditText
        android:id="@+id/txtpasartelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@android:drawable/btn_star"
        android:layout_margin="1dp"
        android:hint="Introduce tu telefono"
        android:inputType="number"
        android:maxLength="9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/btnPasardatos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B1"/>

        <Button
            android:id="@+id/btnPasarpantalla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="b2"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkpermitir"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Permitir paso de datos"
        android:textSize="20sp"/>


</LinearLayout>