<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/muestradatos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:textSize="40dp"
        android:gravity="right"
        android:layout_marginTop="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.70"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">

                <Button
                    android:id="@+id/logaritmo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="log"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    />

                <Button
                    android:id="@+id/num7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="7"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:background="#434343"/>

                <Button
                    android:id="@+id/num8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="8"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:background="#434343"/>

                <Button
                    android:id="@+id/num9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="9"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:background="#434343"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">

                <Button
                    android:id="@+id/seno"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:text="sen"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    />

                <Button
                    android:id="@+id/num4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:text="4"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:background="#434343"/>

                <Button
                    android:id="@+id/num5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:text="5"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:background="#434343"/>

                <Button
                    android:id="@+id/num6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:text="6"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:background="#434343"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">

                <Button
                    android:id="@+id/coseno"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="cos"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    />

                <Button
                    android:id="@+id/num1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="1"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:background="#434343"/>

                <Button
                    android:id="@+id/num2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="2"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:background="#434343"/>

                <Button
                    android:id="@+id/num3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="3"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:background="#434343"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25">

                <Button
                    android:id="@+id/tangente"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="tan"
                    android:textSize="25dp"
                    android:textColor="#000000"/>

                <Button
                    android:id="@+id/decimal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="."
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:background="#434343"/>

                <Button
                    android:id="@+id/num0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="0"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:background="#434343"/>

                <Button
                    android:id="@+id/igual"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:text="="
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:background="#434343"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="0.2">

            <Button
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.20"
                android:text="AC"
                android:textSize="25dp"
                android:background="#636363"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/dividir"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.20"
                android:text="/"
                android:textSize="25dp"
                android:background="#636363"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/multiplicar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:text="*"
                android:textSize="20dp"
                android:background="#636363"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/resta"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:text="-"
                android:textSize="25dp"
                android:background="#636363"
                android:textColor="#ffffff"/>

            <Button
                android:id="@+id/suma"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.20"
                android:text="+"
                android:textSize="20dp"
                android:background="#636363"
                android:textColor="#ffffff"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>